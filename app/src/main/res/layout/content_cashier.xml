            android:gravity="center"
            android:hint="BARCODE HERE" />


        <ImageView
            android:id="@+id/btn_loadDetails"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:padding="4dp"
            android:src="@drawable/proceed_check" />

