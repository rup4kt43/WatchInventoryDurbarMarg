    <TextView
        android:id="@+id/tv_sn"

        android:layout_width="0dp"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:text="SN"
        />

    <TextView
        android:id="@+id/tv_spec"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.9"
        android:textSize="20sp"
        />

</LinearLayout>